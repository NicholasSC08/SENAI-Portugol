programa {
  funcao inicio() {
    // 4) Simulador de trânsito: Crie um programa que pergunte a idade do usuário e,
    //  se ele tiver idade suficiente para dirigir (por exemplo, 18 anos), exiba "Você pode dirigir";
    //  caso contrário, exiba "Você ainda não pode dirigir".

    inteiro idadeDoUsuario
    inteiro idadeQueDevePossiuirAParaDirigir = 18

    escreva("Qual a idade do usuário?\nResposta: ")
    leia(idadeDoUsuario)

    se(idadeDoUsuario >= idadeQueDevePossiuirAParaDirigir){
      escreva("Voce pode dirigir.\nIdade digitada: ",idadeDoUsuario," Anos.")
    } senao {
      escreva("Você ainda não pode dirigir.\nIdade digitada: ",idadeDoUsuario," Anos.")
    }

  }
}
